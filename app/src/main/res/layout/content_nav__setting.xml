<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Navigation_Items.Nav_Setting"
    android:paddingEnd="10dp"
    android:paddingTop="20dp"
    android:paddingStart="10dp"
    tools:showIn="@layout/activity_nav__setting">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Message Display"
    android:textColor="@color/colorAccent"
    android:id="@+id/message"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/message"
        android:background="@drawable/profile"
        android:id="@+id/box"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Blocking Screen Message"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_marginTop="37dp"
            android:textColor="#EC6794"
            android:text="Personalize the message shown when you try to open a blocked app"/>
    </FrameLayout>
</RelativeLayout>