<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Edit_Profile">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar1"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar

            android:layout_width="match_parent"
            android:id="@+id/toolbar11"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_below="@+id/toolbar1"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:text="Name"
            android:textSize="20dp"
            android:layout_marginStart="35dp"
            android:id="@+id/Entername1"

            android:textColor="#E91E63"/>
        <EditText
            android:layout_width="300dp"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_below="@+id/Entername1"
            android:textSize="25dp"
            android:background="@drawable/profile"
            android:hint="Enter Profile Name "
            android:id="@+id/entername"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/entername"
            android:padding="20dp">
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/horizontal"
                android:scrollbars="none">
                <RelativeLayout
                    android:layout_width="wrap_content"

                    android:paddingBottom="20dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Days"
                        android:textSize="20dp"
                        android:layout_marginStart="15dp"
                        android:id="@+id/days"
                        android:textColor="#E91E63"/>
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="M"
                        android:layout_below="@+id/days"
                        android:layout_marginTop="10dp"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="10dp"
                        android:id="@+id/monday"
                        android:background="@drawable/round_button_change"/>
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="Tu"
                        android:textAllCaps="false"
                        android:id="@+id/tuesday"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/days"
                        android:textColor="#FFFFFF"
                        android:layout_marginStart="65dp"
                        android:background="@drawable/round_button_change"/>
                    <Button
                        android:layout_width="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/days"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:text="W"
                        android:id="@+id/wednesday"
                        android:layout_marginStart="120dp"
                        android:background="@drawable/round_button_change"/>
                    <Button
                        android:layout_width="50dp"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:textAllCaps="false"
                        android:text="Th"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/days"
                        android:id="@+id/Thrusday"
                        android:layout_marginStart="175dp"
                        android:background="@drawable/round_button_change"/>

                    <Button
                        android:layout_width="50dp"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:text="F"
                        android:id="@+id/friday"
                        android:layout_marginStart="230dp"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/days"
                        android:background="@drawable/round_button_change"/>
                    <Button
                        android:layout_width="50dp"
                        android:textColor="#FFFFFF"
                        android:layout_height="wrap_content"
                        android:text="Sa"
                        android:textAllCaps="false"
                        android:id="@+id/Saturday"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/days"
                        android:layout_marginStart="285dp"
                        android:background="@drawable/round_button_change"/>
                    <Button
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:text="S"
                        android:textColor="#FFFFFF"
                        android:id="@+id/Sunday"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/days"
                        android:layout_marginStart="343dp"
                        android:background="@drawable/round_button_change"/>
                </RelativeLayout>
            </HorizontalScrollView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/horizontal"
                android:id="@+id/rl2"
                android:background="@drawable/profile"
                android:padding="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time "
                    android:id="@+id/t"
                    android:layout_marginTop="5dp"
                    android:textColor="#E91E63"
                    android:textSize="20dp"/>

                <Button
                    android:id="@+id/add"
                    android:layout_width="75dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="200dp"
                    android:background="#0D67AD"
                    android:clickable="true"
                    android:text="Add"
                    android:textColor="#FFFFFF" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/t"
                    android:layout_marginTop="20dp"
                    android:id="@+id/selectedtime"
                    android:layout_marginStart="20dp"
                    android:hint="Selected Time"
                    android:textSize="15dp"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_below="@+id/rl2"
                android:layout_marginTop="40dp"
                android:padding="20dp"
                android:background="@drawable/profile"
                android:layout_height="300dp">

                <TextView
                    android:id="@+id/a1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Application"
                    android:textColor="#E91E63"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/adda"
                    android:layout_width="75dp"
                    android:clickable="true"
                    android:layout_marginStart="200dp"
                    android:layout_height="40dp"
                    android:background="#0D67AD"
                    android:text="Add"
                    android:textColor="#FFFFFF" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_below="@+id/adda"
                    android:layout_height="wrap_content">
                    <ListView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/adda"
                        android:id="@+id/listviewSelected"
                        android:layout_marginTop="15dp">
                    </ListView>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>
</RelativeLayout>