<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Navigation_Items.NotificationNav_bar"
    tools:showIn="@layout/activity_notification_nav_bar">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Blocked Notification Shown Here:"
        android:textColor="@color/colorAccent"
        android:paddingTop="10dp"
        android:id="@+id/nonoti"
        android:textSize="20dp" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nonoti"
        android:layout_marginTop="10dp"
        android:id="@+id/notification_list"></ListView>

</RelativeLayout>